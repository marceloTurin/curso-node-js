<style>
    .centralizado{
        margin: 0;
        position: absolute;
        top: 50%;
        left: 50%;
        margin-right: -50%;
        transform: translate(-50%, -50%)
    }
    .formulario-box{
        border: solid 1px rgb(197, 193, 193);
        padding:  30px 20px;
        border-radius: 5px;
        background-color: rgb(255, 255, 255);
        width: 300px;
    }

    h1{
        display: block;
        font-size: 2em;
        margin-block-start: 0.67em;
        margin-block-end: 0.67em;
        margin-inline-start: 0px;
        margin-inline-end: 0px;
        font-weight: bold;
    }
    .formulario-box h1{
        font-size: 24px;
        text-align: center;
        margin-bottom: 15px ;
    }

    .input-controle{
        height: 34px;
        width: 100%;
        padding: 6px 12px;
        font-size: 16px;
        border: 1px solid #CCC;
        border-radius: 6px;
        margin-bottom: 10px
    }
    textarea{
        height: 100% !important;
        
    }

    .botao-controle{
        color: rgb(255, 255, 255);
        font-weight: 500;
        display: flex;
        -webkit-box-align: center;
        align-items: center;
        cursor: pointer;
        font-size: 16px;
        align-self: stretch;
        width: 100%;
        -webkit-box-pack: center;
        justify-content: center;
        height: 46px;
        border-radius: 4px;
        border-width: 0px;
        border-style: initial;
        border-color: initial;
        border-image: initial;
        text-decoration: none;
        transition: all 0.2s ease 0s;
        padding: 0px 25px;
        background: rgb(113, 89, 193);
    }
    .botao-controle :hover{
        opacity: 0.8;
    }
    body{
         background: rgb(113, 89, 193);
    }
   
