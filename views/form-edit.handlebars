<div class="centralizado">
    <form action="/editado/{{id}}" method="POST" class="formulario-box">
        <h1>Cadastrar Postagem</h1>
        <input type="text" name="titulo" class="input-controle" value="{{titulo}}">
        <textarea name="conteudo" class="input-controle" >{{conteudo}}</textarea>
        <input type="text" name="email" class="input-controle" value="{{email}}">
        <input type="text" name="dias" class="input-controle" value="{{dias}}">
        
        <button type="submit" class="botao-controle">Editar</button>
    </form>
</div>